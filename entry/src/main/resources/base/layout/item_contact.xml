<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="vertical_center"
    ohos:orientation="horizontal"
    ohos:padding="5vp">

    <Image
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:image_src="$media:icon"
        ohos:right_margin="8vp"
        ohos:scale_mode="zoom_center"/>

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_content"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:name_text"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="联系人姓名"
            ohos:text_size="18vp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:phone_text"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="13311112222"
                ohos:text_size="14vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text=" - "
                ohos:text_size="14vp"/>

            <Text
                ohos:id="$+id:email_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="example@qq.com"
                ohos:text_size="14vp"/>
        </DirectionalLayout>

        <Text
            ohos:id="$+id:address_text"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="幸福大街"
            ohos:text_size="14vp"/>

    </DirectionalLayout>

</DirectionalLayout>